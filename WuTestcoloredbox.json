{
  "id": "com.sap.sample.coloredbox",
  "version": "1.0.1",
  "name": "Wu Test Colored Box",
  "description": "Wu Test a colored box",
  "newInstancePrefix": "ColoredBox",
  "icon": "https://dongxue1995.github.io/WuTest-coloredbox-widget/th.png",
  "vendor": "WuTest based on SAP",
  "eula": "",
  "license": "",
  "webcomponents": [
    {
      "kind": "main",
      "tag": "com-sap-sample-coloredbox",
      "url": "https://dongxue1995.github.io/WuTest-coloredbox-widget/WuTestcoloredbox.js",
      "integrity": "",
      "ignoreIntegrity": true
    },
    {
      "kind": "builder",
      "tag": "com-sap-sample-coloredbox-builder",
      "url": "https://dongxue1995.github.io/WuTest-coloredbox-widget/WuTestcoloredbox_builder-copy.js",
      "integrity": "",
      "ignoreIntegrity": true
    }
  ],
  "properties": {
    "color": {
      "type": "string",
      "description": "Background color",
      "default": "blue"
    },
    "opacity": {
      "type": "number",
      "description": "Opacity",
      "default": 1
    },
    "width": {
      "type": "integer",
      "default": 100
    },
    "height": {
      "type": "integer",
      "default": 100
    }
  },
  "methods": {
    "setColor": {
      "description": "Sets the background color.",
      "parameters": [
        {
          "name": "newColor",
          "type": "string",
          "description": "The new background color"
        }
      ],
      "body": "this.color = newColor;"
    },
    "getColor": {
      "returnType": "string",
      "description": "Returns the background color.",
      "body": "return this.color;"
    },
    "setOpacity": {
      "description": "Sets the background opacity.",
      "parameters": [
        {
          "name": "newOpacity",
          "type": "number",
          "description": "The new background opacity"
        }
      ],
      "body": "this.opacity = newOpacity;"
    },
    "getOpacity": {
      "returnType": "number",
      "description": "Returns the background opacity.",
      "body": "return this.opacity;"
    }
  },
  "events": {
    "onClick": {
      "description": "Called when the user clicks the Colored Box."
    }
  }
}
